extends layout

block content

  h1 #{title}: #{book.title}
  h5 by #[strong #{book.author.name}]

  if bookInstances.length

    p #[strong Delete the following instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Instances
      dl
        each instance in bookInstances
          dt
            a(href=instance.url) #{instance.imprint}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
